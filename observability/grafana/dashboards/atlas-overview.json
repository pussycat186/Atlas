{
  "title": "Atlas Overview",
  "panels": [
    {
      "type": "stat",
      "title": "Gateway RPS",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Gateway p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))"
        }
      ],
      "thresholds": [
        {
          "value": 0.8,
          "color": "red",
          "op": "gt"
        }
      ],
      "links": [
        {
          "title": "View Traces",
          "url": "http://jaeger:16686/search?service={{service}}",
          "targetBlank": true
        }
      ]
    },
    {
      "type": "stat",
      "title": "Quorum Success %",
      "targets": [
        {
          "expr": "100 * sum(rate(quorum_success_total[5m])) / sum(rate(quorum_attempts_total[5m]))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Witness Attestations r/s",
      "targets": [
        {
          "expr": "sum(rate(witness_attestations_total[5m]))"
        }
      ]
    }
  ]
}
