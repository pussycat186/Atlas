{
  "$schema": "https://design-tokens.github.io/community-group/format.html",
  "$description": "Atlas Design System - Semantic tokens (theme-aware colors and component semantics)",
  
  "color": {
    "bg": {
      "canvas": { 
        "value": "{color.white}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.white}",
            "dark": "{color.gray.11}"
          }
        }
      },
      "surface": { 
        "value": "{color.gray.1}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.1}",
            "dark": "{color.gray.10}"
          }
        }
      },
      "elevated": { 
        "value": "{color.white}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.white}",
            "dark": "{color.gray.9}"
          }
        }
      },
      "muted": { 
        "value": "{color.gray.2}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.2}",
            "dark": "{color.gray.8}"
          }
        }
      }
    },
    "text": {
      "primary": { 
        "value": "{color.gray.11}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.11}",
            "dark": "{color.gray.1}"
          }
        }
      },
      "secondary": { 
        "value": "{color.gray.7}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.7}",
            "dark": "{color.gray.4}"
          }
        }
      },
      "tertiary": { 
        "value": "{color.gray.5}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.5}",
            "dark": "{color.gray.5}"
          }
        }
      },
      "onPrimary": { 
        "value": "{color.white}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.white}",
            "dark": "{color.gray.11}"
          }
        }
      }
    },
    "border": {
      "default": { 
        "value": "{color.gray.3}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.3}",
            "dark": "{color.gray.8}"
          }
        }
      },
      "strong": { 
        "value": "{color.gray.4}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.4}",
            "dark": "{color.gray.7}"
          }
        }
      },
      "subtle": { 
        "value": "{color.gray.2}",
        "type": "color",
        "$extensions": {
          "mode": {
            "light": "{color.gray.2}",
            "dark": "{color.gray.9}"
          }
        }
      }
    },
    "primary": {
      "default": { "value": "{color.blue.6}", "type": "color" },
      "hover": { "value": "{color.blue.7}", "type": "color" },
      "active": { "value": "{color.blue.8}", "type": "color" },
      "bg": { "value": "{color.blue.1}", "type": "color" },
      "bgHover": { "value": "{color.blue.2}", "type": "color" }
    },
    "success": {
      "default": { "value": "{color.green.6}", "type": "color" },
      "hover": { "value": "{color.green.7}", "type": "color" },
      "active": { "value": "{color.green.8}", "type": "color" },
      "bg": { "value": "{color.green.1}", "type": "color" },
      "bgHover": { "value": "{color.green.2}", "type": "color" }
    },
    "danger": {
      "default": { "value": "{color.red.6}", "type": "color" },
      "hover": { "value": "{color.red.7}", "type": "color" },
      "active": { "value": "{color.red.8}", "type": "color" },
      "bg": { "value": "{color.red.1}", "type": "color" },
      "bgHover": { "value": "{color.red.2}", "type": "color" }
    },
    "warning": {
      "default": { "value": "{color.amber.6}", "type": "color" },
      "hover": { "value": "{color.amber.7}", "type": "color" },
      "active": { "value": "{color.amber.8}", "type": "color" },
      "bg": { "value": "{color.amber.1}", "type": "color" },
      "bgHover": { "value": "{color.amber.2}", "type": "color" }
    },
    "focus": {
      "ring": { "value": "{color.blue.5}", "type": "color" },
      "ringOffset": { "value": "{color.white}", "type": "color" }
    }
  },
  
  "spacing": {
    "component": {
      "xs": { "value": "{spacing.2}", "type": "dimension" },
      "sm": { "value": "{spacing.3}", "type": "dimension" },
      "base": { "value": "{spacing.4}", "type": "dimension" },
      "lg": { "value": "{spacing.6}", "type": "dimension" },
      "xl": { "value": "{spacing.8}", "type": "dimension" }
    },
    "container": {
      "xs": { "value": "{spacing.4}", "type": "dimension" },
      "sm": { "value": "{spacing.6}", "type": "dimension" },
      "base": { "value": "{spacing.8}", "type": "dimension" },
      "lg": { "value": "{spacing.12}", "type": "dimension" },
      "xl": { "value": "{spacing.16}", "type": "dimension" }
    }
  },
  
  "typography": {
    "heading": {
      "h1": {
        "size": { "value": "{font.size.5xl}", "type": "dimension" },
        "weight": { "value": "{font.weight.bold}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.tight}", "type": "number" }
      },
      "h2": {
        "size": { "value": "{font.size.4xl}", "type": "dimension" },
        "weight": { "value": "{font.weight.bold}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.tight}", "type": "number" }
      },
      "h3": {
        "size": { "value": "{font.size.3xl}", "type": "dimension" },
        "weight": { "value": "{font.weight.semibold}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.tight}", "type": "number" }
      },
      "h4": {
        "size": { "value": "{font.size.2xl}", "type": "dimension" },
        "weight": { "value": "{font.weight.semibold}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.normal}", "type": "number" }
      }
    },
    "body": {
      "base": {
        "size": { "value": "{font.size.base}", "type": "dimension" },
        "weight": { "value": "{font.weight.normal}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.normal}", "type": "number" }
      },
      "sm": {
        "size": { "value": "{font.size.sm}", "type": "dimension" },
        "weight": { "value": "{font.weight.normal}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.normal}", "type": "number" }
      },
      "xs": {
        "size": { "value": "{font.size.xs}", "type": "dimension" },
        "weight": { "value": "{font.weight.normal}", "type": "fontWeight" },
        "lineHeight": { "value": "{font.lineHeight.normal}", "type": "number" }
      }
    },
    "label": {
      "size": { "value": "{font.size.sm}", "type": "dimension" },
      "weight": { "value": "{font.weight.medium}", "type": "fontWeight" },
      "lineHeight": { "value": "{font.lineHeight.normal}", "type": "number" }
    }
  }
}
