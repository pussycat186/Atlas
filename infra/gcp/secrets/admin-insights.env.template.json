{
  "service": "atlas-admin-insights",
  "description": "Environment variables for admin-insights app on Cloud Run",
  "secrets": [
    {
      "name": "NODE_ENV",
      "value": "production",
      "description": "Node environment (production/development)",
      "required": true
    },
    {
      "name": "ATLAS_GATEWAY_URL",
      "value": "https://atlas-gateway.sonthenguyen186.workers.dev",
      "description": "Atlas Gateway API endpoint (Cloudflare Workers)",
      "required": true
    },
    {
      "name": "ATLAS_API_KEY",
      "value": "<REPLACE_WITH_API_KEY>",
      "description": "Atlas API authentication key (admin scope)",
      "required": true
    },
    {
      "name": "NEXT_PUBLIC_APP_URL",
      "value": "https://admin.atlas.com",
      "description": "Public-facing app URL (update after domain mapping)",
      "required": false
    }
  ],
  "notes": [
    "Replace <REPLACE_WITH_*> placeholders with actual values",
    "Admin insights requires elevated API key permissions",
    "Rotate ATLAS_API_KEY quarterly"
  ]
}
