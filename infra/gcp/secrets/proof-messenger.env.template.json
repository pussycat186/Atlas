{
  "service": "atlas-proof-messenger",
  "description": "Environment variables for proof-messenger app on Cloud Run",
  "secrets": [
    {
      "name": "NODE_ENV",
      "value": "production",
      "description": "Node environment (production/development)",
      "required": true
    },
    {
      "name": "ATLAS_GATEWAY_URL",
      "value": "https://atlas-gateway.sonthenguyen186.workers.dev",
      "description": "Atlas Gateway API endpoint (Cloudflare Workers)",
      "required": true
    },
    {
      "name": "ATLAS_DRIVE_URL",
      "value": "https://atlas-gateway.sonthenguyen186.workers.dev",
      "description": "Atlas Drive API endpoint",
      "required": true
    },
    {
      "name": "ATLAS_WEBHOOK_SECRET",
      "value": "<REPLACE_WITH_SECURE_RANDOM_STRING>",
      "description": "Webhook signature verification secret",
      "required": false
    },
    {
      "name": "ATLAS_API_KEY",
      "value": "<REPLACE_WITH_API_KEY>",
      "description": "Atlas API authentication key",
      "required": false
    },
    {
      "name": "JWKS_URL",
      "value": "<REPLACE_WITH_JWKS_ENDPOINT>",
      "description": "JSON Web Key Set URL for token verification",
      "required": false
    },
    {
      "name": "NEXT_PUBLIC_APP_URL",
      "value": "https://proof.atlas.com",
      "description": "Public-facing app URL (update after domain mapping)",
      "required": false
    }
  ],
  "notes": [
    "Replace <REPLACE_WITH_*> placeholders with actual values",
    "Use 'gcloud secrets create' for sensitive values",
    "Mount secrets as environment variables in Cloud Run",
    "Rotate ATLAS_WEBHOOK_SECRET and ATLAS_API_KEY quarterly"
  ]
}
