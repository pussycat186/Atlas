{
  "name": "atlas",
  "version": "1.0.0",
  "description": "Atlas Ecosystem - Zero-crypto messaging and storage platform with multi-witness quorum",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "packages/config"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist services/**/dist apps/**/dist || true",
    "build": "pnpm -r --filter='@atlas/fabric-protocol' build && pnpm -r --filter='@atlas/fabric-client' build && pnpm -r --filter='./services/*' build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:chaos": "pnpm -r test:chaos",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r type-check",
    "smoke": "./scripts/smoke.sh",
    "chaos": "./scripts/chaos_latency.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f infra/docker/compose.dev.yml up -d",
    "docker:ci": "docker-compose -f infra/docker/compose.ci.yml up -d",
    "k8s:deploy": "helm upgrade --install atlas ./infra/k8s/atlas",
    "k8s:delete": "helm uninstall atlas",
    "ci:ensure-live": "node -e \"const u=require('./LIVE_URLS.json');if(!u.proof||!u.admin||!u.dev||!u.gateway){console.log('BLOCKER_NO_LIVE_URLS');process.exit(1)}\"",
    "ci:print-success": "node ./scripts/print-success.cjs"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "knip": "^5.63.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.0",
    "lighthouse": "^11.0.0",
    "@lhci/cli": "^0.13.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "next-pwa": "^5.6.0",
    "next-themes": "^0.2.1",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
