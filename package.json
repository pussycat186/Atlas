{
  "name": "@atlas/workspace",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test:e2e": "playwright test",
    "test:perf": "k6 run tests/k6/smoke.js",
    "validate:api": "spectral lint api/openapi.yaml",
    "validate:opa": "conftest test infra/policies -p policies/",
    "generate:api": "openapi-typescript api/openapi.yaml -o api/types.ts"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "12.1.0",
    "@playwright/test": "^1.56.1",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.38.0",
    "openapi-typescript": "^6.7.0",
    "playwright": "1.56.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "libsodium-wrappers-sumo": "^0.7.15",
    "@noble/ed25519": "^1.7.1",
    "fast-check": "^3.0.0",
    "@simplewebauthn/server": "^4.4.0",
    "@types/express": "^4.17.17",
    "express": "^4.18.2",
    "cookie-session": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
