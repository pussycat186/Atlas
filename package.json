{
  "name": "@atlas/workspace",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test:e2e": "playwright test",
    "test:perf": "k6 run tests/k6/smoke.js",
    "validate:api": "spectral lint api/openapi.yaml",
    "validate:opa": "conftest test infra/policies -p policies/",
    "generate:api": "openapi-typescript api/openapi.yaml -o api/types.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.10.0",
    "openapi-typescript": "^6.7.0",
    "prettier": "^3.1.0",
    "turbo": "^2.5.8",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
