{
  "name": "atlas",
  "version": "1.0.0",
  "description": "Atlas Ecosystem - Zero-crypto messaging and storage platform with multi-witness quorum",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "packages/config"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:wasm": "cd packages/core-rs && wasm-pack build --target bundler --out-dir ../core-wasm --out-name index",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf packages/**/dist services/**/dist apps/**/dist || true",
    "test:e2e": "playwright test",
    "smoke": "./scripts/smoke.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "knip": "^5.63.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "next-pwa": "^5.6.0",
    "next-themes": "^0.2.1",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
